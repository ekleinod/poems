<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Properties>
    <Property name="logpattern">%d %-5p (%F:%L) - %m%n</Property>
  </Properties>

  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="${logpattern}" />
    </Console>
  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="STDOUT" />
    </Root>
  </Loggers>
</Configuration>